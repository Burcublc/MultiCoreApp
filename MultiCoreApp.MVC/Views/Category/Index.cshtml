@model IEnumerable<CategoryDto> //_ViewImports.cshtml 'e git
@{
    ViewData["Title"] = "Index";
}
<h1>Kategoriler</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Kategori Ekle</a> @*asp-action gibi asp kodları viewImports içerisindeki addtaghelperdan geliyo*@
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>

                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>

    }
    </tbody>
</table>
